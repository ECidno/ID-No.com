{% extends 'default.html.twig' %}
{% block title %}{{ 'auth.title'|trans }}{% endblock %}

{# Content #}
{% block content %}
  <div class="container-fluid">
    <div class="row my-3 justify-content-center">
      <div class="col-10 col-lg-8 col-xl-6">
        <h1>{{ 'auth.header'|trans }}</h1>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-10 col-lg-8 col-xl-6">
        {{ 'auth.text'|trans|raw|markdown_to_html }}

        {# error? #}
        {% if error %}
          <div
            class="alert alert-danger alert-dismissible fade show my-3"
            role="alert">
            <div class="d-flex">
              <div class="flex-shrink-0">
                <i class="bi bi-exclamation-triangle px-1"></i>
              </div>
              <div class="flex-grow-1 ms-2">
                {{ error|trans({}, 'security') }}
              </div>
            </div>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="alert"
              aria-label="Close"></button>
          </div>
        {% endif %}

        {% if form %}
        {{ form_start(form) }}
        {{ form_end(form) }}
        {% endif %}

      </div>
    </div>
  </div>
{% endblock %}
