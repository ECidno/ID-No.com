<div class="modal-dialog modal-lg modal-fullscreen-lg-down">
  <div class="modal-content">
    {{ form_start(form, {'attr': {'class':'ajax-form', 'data-bs-table':'tableContacts'} }) }}
      <div class="modal-header">
        <h1 class="modal-title fs-5">
          {{ 'contact.lbl'|trans }} {{ contact.contactname|raw }}
        </h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"></button>
      </div>
      <div class="modal-body">
        {% include '_partials/contacts/addEditForm.html.twig' %}
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-outline-dark"
          data-bs-dismiss="modal"
          aria-label="Close">
          {{ 'Cancel'|trans }}
        </button>
        <button
          type="submit"
          class="btn btn-primary">
          {{ 'Save'|trans }}
        </button>
      </div>
    {{ form_end(form) }}
  </div>
</div>
