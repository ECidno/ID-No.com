
<footer>
	<div class="mt-3 py-3 bg-green text-light">
		<div class="container">
			<div class="row my-3">
				<div class="col-7 col-lg-6 offset-5">
					<p class="text-end">
						<img
							src="{{ asset('images/id_no_logo_black_no_padding.png', 'media') }}"
							alt="ID-No.com"
							title="ID-No.com GmbH - medical aid"
							width="200" /><br/>
						Cassellastra&szlig;e 30-32<br/>
						D-60386 Frankfurt am Main<br/>
						<br/>
						E-Mail: <a href="mailto:service@id-no.com" class="text-white underlined">Service@ID-No.com</a>
					</p>
				</div>
			</div>
		</div>
	</div>

	{# copy, menu #}
	<div class="container-fluid">
		<div class="row p-3">
			<div class="col-12 col-lg-4 order-2 order-lg-1 text-center text-lg-start">
				<small>{{ "now"|date('Y') }} &copy; ID-No.com - All rights reserved</small>
			</div>
			<div class="col-12 col-lg-8 order-1 order-lg-2">
				<div class="col text-center text-lg-end fs-6">
					{% for key, item in settings.menu.footer %}
						{% set title = 'footer.menu.' ~ key ~ '.lbl' %}
						{% set href = item.page is not defined or item.page is empty
							? item.href ?? '#'
							: path(settings.pages[item.page].route) %}
						<a href="{{ href }}">{{ title|trans }}</a>
						{% if loop.revindex == 3 %}
							<br class="d-sm-none" /><span class="d-none d-sm-inline">&nbsp;|&nbsp;</span>
						{% else %}
							&nbsp;|&nbsp;
						{% endif %}
					{% endfor %}
					<a
						href="#"
						onclick="CCM.openWidget();return false;">{{ 'footer.menu.cookie.lbl'|trans }}</a>
				</div>
			</div>
		</div>
	</div>
</footer>