
<footer>
	<div class="mt-3 py-3 bg-green text-light">
		<div class="container">
			<div class="row my-3">
				<div class="col-5 text-md-start text-sm-center">
					<div class="row">
						<div class="col-12 col-md-6 col-lg-5">
							<img src="{{ asset('images/datenschutzsiegel_border.png', 'media') }}"
								alt="Datenschutzexperte.de"
								title="Datenschutzexperte.de"
								class="ms-md-3 me-2 emblem-datenschutzexperte footer">
						</div>
						<div class="col-12 col-md-6 d-none d-md-flex">
							{# no some icons on index #}
							{% if app.request.attributes.get('_route') != 'app_standard_index' %}
								{% for key, item in settings.social %}
									<a
										href="{{ item.href }}"
										target="_blank">
										<img
											class="socialmedia_icon"
											src="{{ asset(item.icon, 'media') }}"
											alt="{{ item.title }}" />
									</a>
									
								{% endfor %}
							{% endif %}
						</div>
					</div>
				</div>

				<div class="col-7 col-lg-6">
					<p class="text-end">
						<img
							src="{{ asset('images/id_no_logo_black_no_padding.png', 'media') }}"
							alt="ID-No.com"
							title="ID-No.com GmbH - medical aid"
							width="200" /><br/>
						Cassellastra&szlig;e 30-32<br/>
						D-60386 Frankfurt am Main<br/>
						<br/>
						E-Mail: <a href="mailto:service@id-no.com" class="text-white underlined">Service@ID-No.com</a>
					</p>
				</div>

				<div class="col-12 d-md-none text-center footer-mobile">
					{# no some icons on index #}
					{% if app.request.attributes.get('_route') != 'app_standard_index' %}
						{% for key, item in settings.social %}
							<a
								href="{{ item.href }}"
								target="_blank">
								<img
									class="socialmedia_icon"
									src="{{ asset(item.icon, 'media') }}"
									alt="{{ item.title }}" />
							</a>
							
						{% endfor %}
					{% endif %}
				</div>

			</div>
		</div>
	</div>

	{# copy, menu #}
	<div class="container-fluid">
		<div class="row p-3">
			<div class="col-12 col-lg-4 order-2 order-lg-1 text-center text-lg-start">
				<small>{{ "now"|date('Y') }} &copy; ID-No.com - All rights reserved</small>
			</div>
			<div class="col-12 col-lg-8 order-1 order-lg-2">
				<div class="col text-center text-lg-end fs-6">
					{% for key, item in settings.menu.footer %}
						{% set title = 'footer.menu.' ~ key ~ '.lbl' %}
						{% set href = item.page is not defined or item.page is empty
							? item.href ?? '#'
							: path(settings.pages[item.page].route) %}
						<a href="{{ href }}">{{ title|trans }}</a>
						{% if loop.revindex == 3 %}
							<br class="d-sm-none" /><span class="d-none d-sm-inline">&nbsp;|&nbsp;</span>
						{% else %}
							&nbsp;|&nbsp;
						{% endif %}
					{% endfor %}
					<a
						href="#"
						onclick="CCM.openWidget();return false;">{{ 'footer.menu.cookie.lbl'|trans }}</a>
				</div>
			</div>
		</div>
	</div>
</footer>