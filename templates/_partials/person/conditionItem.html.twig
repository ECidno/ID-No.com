{% import _self as formMacros %}
<fieldset class="form-floating">
    <h4 class="sub-head small">{{ 'person.condition.lbl'|trans }} <span class="loop-value">{{ loop }}</span></h4>
    <div class="row">
        <div class="col-9">
            {{ form_row(item.category) }}
        </div>
        <div class="col-3">
            {{ form_row(item.remove) }}
        </div>
    </div>
    <div class="row">
        <div class="col-9">
            {{ form_row(item.title) }}
        </div>
    </div>    
    <div class="row">
        <div class="col-9">
            {{ form_row(item.comment) }}
        </div>
    </div>
</fieldset>