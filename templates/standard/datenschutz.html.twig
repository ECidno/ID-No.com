{% extends 'default.html.twig' %}
{% block title %}{{ 'Datenschutz'|trans }}{% endblock %}

{# Content #}
{% block content %}
  <div class="container">
    <div class="row my-3">
      <div class="col-12 col-md-10 col-lg-8">
        <h1>{{ 'privacy.title'|trans }}</h1>
      </div>
    </div>
    <div class="row py-3">
      <div class="col-12 col-md-10 col-lg-8">
        <p class="fw-light">
          {{ 'privacy.version'|trans }}
        </p>
        {{ 'privacy.text'|trans|raw|markdown_to_html }}
      </div>
    </div>
  </div>
{% endblock %}
